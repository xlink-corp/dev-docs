header-padding-normal = 10px
header-padding-max = 30px
logo-width = 160px
logo-height = 60px

.pull-left
  float: left

.col-sm-6
  float: left
  width: 50%

.col-sm-12
  float: left
  width: 100%

.text-center
  text-align: center

.pull-right
  float: right

#header
  position: fixed
  left: 0
  top: 0
  z-index: 10000
  padding-top: 10px
  width: 100%
  max-width: 100%
  background-color: #fff
  box-shadow: 0 2px 10px #eee
  @media print
    display: none

#header-inner
  position: relative
  margin: 0 auto
  padding: 0
  padding-right: 10px
  max-width: max-width

#logo-wrap
  float: left
  width: auto
  border: 0
  margin-bottom: 10px

#logo
  hide-text()
  background: url("/images/logo.png")
  background-size: contain
  width: logo-width
  height: logo-height
  background-size: @width @height
  display: block

#main-nav
  display: none
  float: left
  position: relative
  top: 20px
  padding-left: 114px
  @media mq-normal
    display: block

.main-nav-link
  display: inline-block
  color: #333
  text-decoration: none
  line-height: 26px
  padding-bottom: 0
  border-bottom: 2px solid #fff
  font-size: 15px
  display: inline-block
  margin-left: 40px
  &:hover
    color: #DD0036
    padding-bottom: 22px
    border-bottom-color: #DD0036
    transition: padding-bottom 0.3s, border-bottom-color 0.3s
  &.current
    color: #DD0036
    padding-bottom: 22px
    border-bottom-color: #DD0036

#lang-select-wrap
  display: none
  position: relative
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7

  line-height: logo-height
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit

.searchbar
  position: relative
  float: left
  margin-left: 126px
  margin-top: 15px
  padding-right: 20px
  width: 35px
  line-height: 1
  font-size: 0
  border-right: 1px solid #ccc
  cursor: pointer
  .search-icon
    box-shadow: none
    border: 0
  .serach-placeholder
    position: absolute
    top: 0
    left: 20px
    white-space: nowrap
    font-size: 15px

.searchbar-inputting
  position: absolute
  z-index: 9
  left: 180px
  padding-left: 20px
  width: 930px
  height: 50px
  background-color: #fff
  transform-origin: 85% 50%
  transform: scale(0, 0)
  transition: 0.3s
  &.searchShow
    transform: scale(1, 1)
  .search-tips
    position: absolute
    top: 16px
    left: 20px
  .search-input
    padding-left: 20px
    width: 100%
    height: 100%
    font-size: 16px
    &:focus
      outline: none
  .search-icon
    width: 17px
    height: 17px
    box-shadow: none
    border: 0
  .serach-placeholder
    display: none
  .close-search
    position: absolute
    right: 0
    top: 50%
    margin-top: -7px
    width: 14px
    height: 14px
    cursor: pointer
    img
      box-shadow: none
      border: 0

.fadeHide
  opacity: 0;
  visibility: hidden

.header-user
  position: relative
  top: 26px
  margin: 0

.login
  color: #666
  text-decoration: none

.login:hover
  color: #DD0036

.register
  margin-top: -6px
  margin-left: 22px
  width: 90px
  height: 30px
  line-height: 28px
  padding-left: 2px
  position: relative
  top: -3px

.user-email
  float: left
  margin-left: 6px
  margin-top: 4px
  line-height: 1.2
  width: 120px
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  letter-spacing: 0
  vertical-align: middle

.header
  position: relative
  padding-top: 14px
  font-size: 13px
  background-color: #fff
  z-index: 9999

.header-logo,
.menu-item,
.header-login
  float: left

.header-logo
  padding-left: 1px;

.nav-item
  position: relative
